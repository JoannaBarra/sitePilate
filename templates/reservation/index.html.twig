{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
<div class="alert alert-success">
{{message}}
</div>
{% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Reservation</th>
                <th>Nom</th>
                <th>Cours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.dateResa ? reservation.dateResa|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.user.username}}</td>
                <td>{{ reservation.cour.title }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# {% if app.user is not empty and is not %} #}
    <a href="{{ path('app_reservation_new') }}">Créer une nouvelle réservation</a>
{% endblock %}
